pipeline {
  agent any

  stages {
    stage('Prepare') {
      steps {
        sh '''
          export CIDR_IP="10.16.0.0/16"

          set -e

          sshRule='[
            {
              "IpProtocol": "tcp",
              "FromPort": 22,
              "ToPort": 22,
              "IpRanges": [
                {
                  "CidrIp": "'${CIDR_IP}'",
                  "Description": "Testing"
                }
              ]
            }
          ]'
          
          echo $sshRule
                
          output=$(aws ec2 authorize-security-group-ingress --group-id sg-045fe18ad1e385c69 --ip-permissions "$sshRule" 2>&1)
          exit_status=$?
          if [[ $exit_status -eq 0 ]]; then 
            echo "Added successfully"
          else
            echo "Error: $output"
          fi

        '''
      }
    }
  }
  
  post {
    always {
      script {
        cleanWs()
      }
    }
  }
}