pipeline {
  agent any

  stages {
    stage('Prepare') {
      steps {
        sh '''
          export CIDR_IP="10.16.0.0/16"

          sshRule='[
            {
              "IpProtocol": "tcp",
              "FromPort": 22,
              "ToPort": 22,
              "IpRanges": [
                {
                  "CidrIp": "'${CIDR_IP}'",
                  "Description": "Testing"
                }
              ]
            }
          ]'
          
          echo $sshRule
                
          output=$(aws ec2 authorize-security-group-ingress --group-id sg-0bf8de7b0ac4b3f40 --ip-permissions "$sshRule" 2>&1)
          exit_status=$?
          if [[ $exit_status -ne 0 ]]; then 
            echo "Error: $output"
            exit $exit_status
          else
            echo "Added successfully"
          fi
        '''
      }
    }
  }
  
  post {
    always {
      script {
        cleanWs()
      }
    }
  }
}
